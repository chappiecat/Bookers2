


<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">

  <h1>User info</h1>
  <div>

    <%= image_tag @user.get_profile_image(100,100) %>
  </div>

  <table class="table">
    <thesd>
    <tr>
      <th>Name</th>
        <td><%= @user.name %></td>
        </tr>
        <tr>
      <th>Introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
    </thead>
  </table>


  <div class = "row">
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_48773" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
</div>





<h1>New book</h1>


<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% end %>


<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%><br>


  <label for="inputOpinion">Opinion</label><br>
  <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion"%><br>

  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>
</div>




<div class= "col-md-8 offset-md-1">

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>

      <th>Opinion</th>
      <th></th>
    </tr>
    </thead>

  <tbody>

    <% @books.each do |book| %>
    <tr>
      <td><%= link_to user_path(@user.id) do %>
    <%= image_tag book.user.get_profile_image(100, 100) %>
  <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>


      <td><%= book.body %></td>
    </tr>
<% end %>

  </tbody>

</table>
</div>
