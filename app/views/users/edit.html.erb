
<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
<% end %>

  <%= form_with model: @user do |f| %>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "Introduction", accept: "image/*" %><br>
<% end %>

  <%= form_with model: @user do |f| %>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%><br>

 <%= f.submit "Update User" %>
<% end %>

<%= link_to "削除", user_path(@user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
